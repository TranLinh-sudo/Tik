-- Link c·ªßa b·∫°n (Gi·ªØ nguy√™n)
local URL = "https://d1d951b3e92c3b.lhr.life/update" 
-------------------------------------------------------------

local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")
local Client = Players.LocalPlayer

-- H√†m g·ª≠i si√™u t·ªëc
local function serverRequest(options)
    if syn and syn.request then return syn.request(options)
    elseif http_request then return http_request(options)
    elseif request then return request(options)
    else return {StatusCode = 500} end
end

spawn(function()
    while true do
        wait(3) -- G·ª≠i 3 gi√¢y 1 l·∫ßn
        pcall(function()
            local data = {
                -- üî• QUAN TR·ªåNG: ƒê·∫∑t c·ª©ng t√™n ƒë·ªÉ Server kh√¥ng nh·∫ßm
                name = "MAY_CLOUD_SO_2", 
                
                level = Client.Data.Level.Value,
                beli = Client.Data.Beli.Value,
                fragment = Client.Data.Fragments.Value,
                fruits = {"Test ket noi tu may khac"}
            }
            
            local jsonData = HttpService:JSONEncode(data)
            
            -- G·ª≠i ƒëi v√† in k·∫øt qu·∫£ ra F9
            local response = serverRequest({
                Url = URL,
                Method = "POST",
                Headers = {["Content-Type"] = "application/json"},
                Body = jsonData
            })
            
            -- Ki·ªÉm tra ph·∫£n h·ªìi
            if response.StatusCode == 200 then
                print("‚úÖ ƒê√£ g·ª≠i tin th√†nh c√¥ng: MAY_CLOUD_SO_2")
            else
                print("‚ùå L·ªói Server: " .. tostring(response.StatusCode))
            end
        end)
    end
end)

game.StarterGui:SetCore("SendNotification", {Title = "Ho·∫°t System", Text = "ƒêang test M√ÅY CLOUD S·ªê 2", Duration = 5})
