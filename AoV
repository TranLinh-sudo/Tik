local TERMUX_IP = "192.168.1.60" -- <--- SỬA SỐ NÀY CHO ĐÚNG
local PORT = "5000"
local URL = "local URL = "https://d1d951b3e92c3b.lhr.life/update"

-- Hàm gửi thử dữ liệu
local function TestConnection()
    local HttpService = game:GetService("HttpService")
    
    -- Tạo thông báo đang gửi
    game.StarterGui:SetCore("SendNotification", {
        Title = "Server Admin",
        Text = "Đang thử kết nối tới " .. TERMUX_IP,
        Duration = 3
    })

    local data = {name = "Test User", level = 100, beli = 500, fragment = 10, fruits = {"Test Fruit"}}
    local jsonData = HttpService:JSONEncode(data)

    -- Gửi request
    local success, response = pcall(function()
        return request({
            Url = URL,
            Method = "POST",
            Headers = {["Content-Type"] = "application/json"},
            Body = jsonData
        })
    end)

    if success then
        game.StarterGui:SetCore("SendNotification", {
            Title = "THÀNH CÔNG! ✅",
            Text = "Đã gửi được tin tới Server!",
            Duration = 10
        })
    else
        game.StarterGui:SetCore("SendNotification", {
            Title = "THẤT BẠI ❌",
            Text = "Lỗi: Executor không gửi được!",
            Duration = 10
        })
    end
end

-- Chạy luôn
TestConnection()
